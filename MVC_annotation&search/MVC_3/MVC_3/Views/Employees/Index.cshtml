@model IEnumerable<MVC_3.Models.Employee>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Search", "Employees"))
{

    <div>

        First_Name
        <input id="fn" name="check" type="radio" value="First_Name">
        Email
        <input id="em" name="check" type="radio" value="E_mail">
        Last_Name
        <input id="ln" name="check" type="radio" value="Last_Name">
        

<input type="text" name="searchQuery" />    
        <input type="submit" name="Name" value="Search" class="btn btn-success" />
    </div>
    }
    <table class="table">
        <tr>
            <th>
                <label>First Name</label>
            </th>
            <th>
                <label>Last Name</label>
            </th>
            <th>
                <label>Email</label>

            </th>
            <th>
                Phone
            </th>
            <th>
                Age
            </th>
            <th>
                Job Title
            </th>
            <th>
                Female
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.First_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Last_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.E_mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job_Title)
                </td>
                <td>
                    @if (item.Gender == true)
                    {
                        <span>Female</span>
                    }
                    else
                    {
                        <span>Male</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
